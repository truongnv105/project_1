<%= provide :title, t(".users") %>
<table>
  <tr>
    <th><%= t ".stt" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".email" %></th>
    <th><%= t ".avatar" %></th>
    <th colspan="3"><%= t ".action" %></th>
  </tr>
  <% @users.each.with_index 1 do |user, key| %>
    <tr>
      <td><%= key %></td>
      <td><%= link_to admin_user_path(user.id) do %><%= user.name %><% end %></td>
      <td><%= user.email %></td>
      <td><%= image_tag user.avatar.url, size: Settings.users.avatar.size if user.avatar.present? %></td>
      <td>
        <%= link_to admin_user_path(user.id), title: t(".show_user") do%>
          <i class="fa fa-eye"></i>
        <% end %>
      </td>
      <td>
        <%= link_to  edit_admin_user_path(user.id), title: t(".edit_user") do%>
          <i class="fa fa-edit"></i>
        <% end %>
      </td>
      <td>
        <%= link_to admin_user_path(user.id), method: :delete, data: {confirm: t(".you_sure")},
          title: t(".you_sure") do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @users %>
